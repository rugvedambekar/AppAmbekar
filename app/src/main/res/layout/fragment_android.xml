<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ra.appambekar.fragments.qualifications.QualificationsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ra.appambekar.views.IntroductionLayout
        android:id="@+id/ll_introduction"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        app:introHeading="@string/a_heading"
        app:intro="@string/a_intro"
        app:pstsShouldExpand="true"/>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabStrip_android"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/ll_introduction"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="true"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabStrip_android"
        android:padding="10dp"/>

</RelativeLayout>
