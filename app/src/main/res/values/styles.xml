<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="FragmentSpacing">
        <item name="android:padding">20dp</item>
    </style>


    <!--Buttons-->

    <style name="LoginButton" parent="LoginButtonBase"/>

    <style name="LoginButtonBase" parent="android:Widget.TextView">
        <item name="android:background">@drawable/button_login</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_med</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="AndroidListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>
