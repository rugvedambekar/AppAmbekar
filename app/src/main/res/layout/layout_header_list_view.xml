<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ra.smarttextview.SmartTextView
        android:id="@+id/tv_hlbHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Types"
        android:textSize="28sp"
        app:font="thin"/>

    <ra.smarttextview.SmartTextView
        android:id="@+id/tv_hlbTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hlbHeader"
        android:text="I've Worked On"
        android:textSize="12sp"
        app:font="thick"/>

    <View
        android:id="@+id/divider_hlb"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/tv_hlbTag"
        android:background="@android:color/darker_gray"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_hlbContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:orientation="vertical"/>

    </ScrollView>


</LinearLayout>
