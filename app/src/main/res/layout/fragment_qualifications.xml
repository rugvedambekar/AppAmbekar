<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ra.appambekar.fragments.qualifications.QualificationsFragment">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabStrip_qualifications"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/toolbar_main_dark"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="true"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_qualifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabStrip_qualifications"/>

</RelativeLayout>
